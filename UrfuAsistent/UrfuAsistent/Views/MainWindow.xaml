<Window x:Class="ConsoleApp8.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ConsoleApp8.Views"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="AI Chat Assistant" Height="650" Width="900" WindowStartupLocation="CenterScreen">

    <materialDesign:DialogHost Identifier="RootDialog" SnackbarMessageQueue="{Binding ElementName=MainSnackbar, Path=MessageQueue}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App Bar -->
            <materialDesign:ColorZone Mode="PrimaryDark" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center" FontSize="18">Ассистент УрФУ</TextBlock>
                    <Image Source="/Assets/UrFULogo.png" Width="32" Height="32" VerticalAlignment="Center" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </materialDesign:ColorZone>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryLight">
                    <!-- Tab 1: Standard API Tab -->
                    <TabItem Header="API Chat">
                        <materialDesign:Card Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding Response}" TextWrapping="Wrap" FontSize="16" />
                            </ScrollViewer>
                        </materialDesign:Card>
                    </TabItem>
                    
                    <!-- Tab 2: SSR Tab -->
                    <TabItem Header="SSR Chat">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <WebBrowser x:Name="SsrBrowser" Visibility="{Binding IsSsrLoaded, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <materialDesign:Card Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2" 
                                                Visibility="{Binding IsSsrLoaded, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                <TextBlock Text="SSR content will be displayed here once you send a prompt." 
                                          TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </materialDesign:Card>
                        </Grid>
                    </TabItem>
                    
                    <!-- Tab 3: Voice Transcription -->
                    <TabItem Header="Voice Assistant">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Voice controls -->
                            <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Upload an audio file for transcription:" Margin="0,0,0,8"/>
                                    
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox IsReadOnly="True" Text="{Binding SelectedAudioFile}" 
                                                materialDesign:HintAssist.Hint="No file selected..."/>
                                        
                                        <Button Grid.Column="1" Margin="8,0,0,0" 
                                               Command="{Binding BrowseAudioFileCommand}"
                                               Style="{StaticResource MaterialDesignOutlinedButton}">
                                            Browse
                                        </Button>
                                    </Grid>
                                    
                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                                        <RadioButton GroupName="TranscriptionMode" Content="Transcribe Only" 
                                                    IsChecked="{Binding TranscribeOnly}" Margin="0,0,16,0"/>
                                        <RadioButton GroupName="TranscriptionMode" Content="Transcribe and Respond" 
                                                    IsChecked="{Binding TranscribeAndRespond}"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                            
                            <!-- Voice transcription/response display -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <materialDesign:Card Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth1" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="Transcription:" FontWeight="Bold" Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding Transcription}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </materialDesign:Card>
                                
                                <materialDesign:Card Grid.Row="1" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <StackPanel>
                                            <TextBlock Text="Response:" FontWeight="Bold" Margin="0,0,0,8"/>
                                            <TextBlock Text="{Binding VoiceResponse}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </ScrollViewer>
                                </materialDesign:Card>
                            </Grid>
                            
                            <!-- Voice action buttons -->
                            <Button Grid.Row="2" Command="{Binding ProcessAudioCommand}" 
                                   Style="{StaticResource MaterialDesignRaisedButton}"
                                   HorizontalAlignment="Right" Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="VoiceChat" Margin="0,0,8,0"/>
                                    <TextBlock Text="Process Audio"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Input Area -->
            <Grid Grid.Row="2" Margin="16,0,16,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:Card Padding="8" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            Text="{Binding Prompt, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalAlignment="Center"
                            materialDesign:HintAssist.Hint="Enter your question here..."
                            Height="60"
                            MinHeight="60"
                            MaxHeight="150"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="0,8,0,0"
                            VerticalScrollBarVisibility="Auto"/>

                        <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Bottom">
                            <Button
                                Command="{Binding ClearPromptCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Clear">
                                <materialDesign:PackIcon Kind="Eraser" Width="24" Height="24"/>
                            </Button>
                            <Button
                                Command="{Binding SendPromptCommand}"
                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                ToolTip="Send"
                                Margin="8,0,0,0">
                                <materialDesign:PackIcon Kind="Send" Width="24" Height="24"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- API Configuration Area -->
            <Expander Grid.Row="3" Header="API Settings" Margin="16,0,16,16" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <Grid Margin="16,8,16,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Text="{Binding ApiUrl, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Enter API URL..."
                        VerticalAlignment="Center"/>

                    <Button
                        Grid.Column="1"
                        Command="{Binding UpdateApiUrlCommand}"
                        Content="Update"
                        Margin="16,0,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </Grid>
            </Expander>

            <!-- Loading Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="4" Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    IsIndeterminate="True"
                    Width="60"
                    Height="60"/>
            </Grid>

            <materialDesign:Snackbar x:Name="MainSnackbar" Grid.Row="3" />
        </Grid>
    </materialDesign:DialogHost>
</Window>